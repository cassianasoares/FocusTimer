<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.fragment.SetTimeFragment"
        android:background="@drawable/background_app"
        android:padding="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tempo do Pomodoro:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/time_chipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:selectionRequired="true"
            app:singleSelection="true"
            app:checkedChip="@+id/time25_chip">

            <com.google.android.material.chip.Chip
                android:id="@+id/time25_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 min" />

            <com.google.android.material.chip.Chip
                android:id="@+id/time30_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 min" />

            <com.google.android.material.chip.Chip
                android:id="@+id/time40_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40 min" />

            <com.google.android.material.chip.Chip
                android:id="@+id/time50_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 min" />
        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantidade de SessÃµes:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/session_chipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:checkedChip="@id/session1_chip"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/session1_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1X" />

            <com.google.android.material.chip.Chip
                android:id="@+id/session2_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2X" />

            <com.google.android.material.chip.Chip
                android:id="@+id/session3_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3X" />

            <com.google.android.material.chip.Chip
                android:id="@+id/session4_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4X" />
        </com.google.android.material.chip.ChipGroup>

        <Button
            android:id="@+id/setNewTime_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            android:background="@color/orange"
            android:layout_marginTop="16dp" />

    </LinearLayout>
